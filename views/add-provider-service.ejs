<%- include('./includes/head.ejs') %>
    <title><%= pageTitle %> </title>
</head>
<body>
    <%- include('./includes/menu.ejs') %> 
       
    <div class="ui segment">
        <h2 class="ui header"><%= pageTitle %></h2>

      <form class="ui form" id="form" action="/add-provider-service" method="POST"  enctype="multipart/form-data">
        <input type="text" name="data" id="obj" value="" hidden>
          
        <div class="field">
          <label>Title</label>
          <input type="text" name="title" id="title" value="" placeholder="Title">
        </div>
        <div class="field">
          <label>Description</label>
          <input type="text" name="desc" id="desc" value="" placeholder="Description">
        </div>
        <div class="field">
          <label>Address</label>
          <input type="text" name="address" id="address" value="" placeholder="Address">
        </div>
        <div class="field">
          <label>Charges</label>
          <input type="text" name="charges" id="charges" value="" placeholder="Charges">
        </div>
        
        <div class="field">
          <label>ServiceID</label>
            <select name="serviceid1" id="serviceid1" >
          </select>
        </div>

        <div class="field">
          <label>ProviderID</label>
          <select name="providerid1" id="providerid1" >
          </select>
        </div>
        <div class="field">
          <label>Image</label>
          <!-- <input type="text" name="img" id="img" value="" placeholder="Image"> -->
          <input type="file" accept="image/*" name="image" id="image" >
        </div>
      <button class="ui button" >Submit</button>
       
      </form>
    </div>

    <script>

    let data = JSON.parse(localStorage.getItem('alldata'));
        const providerInfo = data.providerInfo;
        const services = data.services;

        // console.log(providerInfo)
        console.log(services);

        for( let i of providerInfo){
            // console.log(i.name);
            var s = document.createElement("option");
            s.setAttribute("value", i.providerId); 
            s.innerHTML = i.name;
            document.getElementById('providerid1').appendChild(s);
        }
        for( let i of services){
            // console.log(i.name);
            var s = document.createElement("option");
            s.setAttribute("value", i.serviceId); 
            s.innerHTML = i.title;
            document.getElementById('serviceid1').appendChild(s);
        }


    </script>
</body>  
</html>

