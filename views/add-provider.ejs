<%- include('./includes/head.ejs') %>
    <title><%= pageTitle %> </title>
</head>
<body>
    <%- include('./includes/menu.ejs') %> 
       
    <div class="ui segment">
        <h2 class="ui header"><%= pageTitle %></h2>

    <form class="ui form" id="form" action="/add-provider" method="POST"  enctype="multipart/form-data">
        <input type="text" name="data" id="obj" value="" hidden>
          
        <div class="field">
          <label>Name</label>
          <input type="text" name="name" id="name" value="" placeholder="Name">
        </div>
        <div class="field">
          <label>Description</label>
          <input type="text" name="desc" id="desc" value="" placeholder="Description">
        </div>
        <div class="field">
          <label>Address</label>
          <input type="text" name="address" id="address" value="" placeholder="Address">
        </div>
        <div class="field">
          <label>Image</label>
          <!-- <input type="text" name="img" id="img" value="" placeholder="Image"> -->
          <input type="file" accept="image/*" name="image" id="image" >
        </div>
      <button class="ui button" >Submit</button>
       
      </form>
      
    </div>
</body>  
</html>

